<ol reversed class="postlist content" style="counter-reset: start-from {{ (postslistCounter or postslist.length) + 1 }}">
{% for post in postslist | reverse %}

  <li class="postlist-item{% if post.url == url %} postlist-item-active{% endif %} stack">

		<div>
			<a href="{{ post.url | url }}">{% if post.data.title %}{{ post.data.title }}{% else %}<code>{{ post.url }}</code>{% endif %}</a>
			<time class="postlist-date" datetime="{{ post.date | htmlDateString }}">{{ post.date | readableDate }}</time>	
		</div>

		<p>{{ post.data.description }}</p>
    
  </li>
{% endfor %}
</ol>
